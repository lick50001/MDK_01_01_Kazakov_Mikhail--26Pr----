<Page x:Class="WpfApp3.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Background="#1A46FD"
      Title="Поиск авиабилетов">

    <Grid>
        <!-- Шапка -->
        <Label Content="Управление авиалиниями" Foreground="White" FontSize="16"
               HorizontalAlignment="Left" Margin="20,15,0,0" VerticalAlignment="Top"/>

        <Button Click="ToExit" Content="Выход" Background="White" Foreground="#1A46FD"
                HorizontalAlignment="Right" Margin="0,10,20,0" VerticalAlignment="Top" 
                Height="30" Width="100" Cursor="Hand"/>

        <!-- Центральный блок поиска -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">

            <Label Content="Поиск дешевых авиабилетов" FontSize="24" FontWeight="Bold" 
                   Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <Label Content="Лучший способ купить авиабилеты дешево" FontSize="14" 
                   Foreground="#E0E0E0" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <!-- Откуда -->
            <Label Content="Откуда:" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="From" TextWrapping="Wrap" 
                     Height="40" FontSize="16" Padding="5"
                     Margin="0,0,0,20"/>

            <!-- Куда -->
            <Label Content="Куда:" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="To" TextWrapping="Wrap" 
                     Height="40" FontSize="16" Padding="5"
                     Margin="0,0,0,30"/>

            <!-- Кнопка Найти -->
            <Button Click="ToSearch" Content="Найти рейсы" 
                    Background="#FF5722" Foreground="White" 
                    FontSize="18" FontWeight="Bold"
                    Height="45" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Page>