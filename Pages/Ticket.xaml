<Page x:Class="WpfApp3.Pages.Ticket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:elements="clr-namespace:WpfApp3.Elements"
      Background="WhiteSmoke"
      MinWidth="1050"
      Title="Рейсы">

    <Grid>
        <Grid Height="60" VerticalAlignment="Top" Background="#1A46FD">
            <Label Content="Управление авиалиниями" FontWeight="SemiBold" Foreground="White" 
                   FontSize="18" VerticalAlignment="Center" Margin="20,0,0,0" HorizontalAlignment="Left"/>

            <Button Click="ToBack" Content="Вернуться" Background="White" Foreground="#1A46FD"
                    HorizontalAlignment="Right" Margin="0,0,20,0" VerticalAlignment="Center" 
                    Height="35" Width="100" Cursor="Hand"/>
        </Grid>

        <ScrollViewer Margin="0,60,0,0" VerticalScrollBarVisibility="Auto" Background="WhiteSmoke">
            <ItemsControl x:Name="FlightsContainer" Margin="20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <elements:Item Margin="0,0,0,15"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>