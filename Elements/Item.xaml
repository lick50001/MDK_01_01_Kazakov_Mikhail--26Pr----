<UserControl x:Class="WpfApp3.Elements.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp3.Elements"
             mc:Ignorable="d" 
             Background="DarkGray" d:DesignWidth="800" Height="174" MinHeight="174">
    <Grid>
        <!-- === ЛЕВАЯ ЧАСТЬ (Цена и кнопка) === -->
        <Label x:Name="lPrice" Content="{Binding Price, StringFormat={}{0} ₱}" FontSize="28" 
               HorizontalAlignment="Left" VerticalAlignment="Top" 
               Margin="41,21,0,0"/>

        <Button Content="Подробнее" Background="Red" Foreground="White" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="15,84,0,0" Width="147" Height="28"/>

        <!-- === ЛЕВАЯ ЧАСТЬ (Инфо вылета) === -->
        <!-- Все привязано слева, правый отступ автоматический (0) -->
        <Label Content="pobeda" FontSize="14" 
               HorizontalAlignment="Left" VerticalAlignment="Top" 
               Margin="206,21,0,0"/>

        <Label Content="{Binding Time_start}" FontSize="22" 
               HorizontalAlignment="Left" VerticalAlignment="Top" 
               Margin="208,55,0,0"/>

        <Label Content="{Binding From}" FontSize="14" 
               HorizontalAlignment="Left" VerticalAlignment="Top" 
               Margin="206,99,0,0"/>

        <Label Content="29 сентября 2021" FontSize="14" 
               HorizontalAlignment="Left" VerticalAlignment="Top" 
               Margin="206,133,0,0"/>

        <!-- === ЦЕНТР (Линия и время в пути) === -->
        <!-- Привязано справа с фиксированным отступом, чтобы быть рядом с блоком "Куда" -->
        <Label Content="В пути 2ч 15м" FontSize="10" 
               HorizontalAlignment="Center" VerticalAlignment="Top" 
               Margin="0,53,0,0" Height="23"/>

        <Rectangle Fill="Gray" 
                   Margin="333,81,361,87"/>

        <!-- === ПРАВАЯ ЧАСТЬ (Инфо прилета) === -->
        <!-- Все привязано справа. Левый отступ = 0, чтобы блок "ехал" за краем окна -->
        <Label Content="pobeda" FontSize="14" 
               HorizontalAlignment="Left" VerticalAlignment="Top" 
               Margin="661,21,0,0"/>

        <Label Content="{Binding Time_way}" FontSize="22" 
               HorizontalAlignment="Left" VerticalAlignment="Top" 
               Margin="661,55,0,0"/>

        <Label Content="{Binding To}" FontSize="14" 
               HorizontalAlignment="Left" VerticalAlignment="Top" 
               Margin="661,99,0,0"/>

        <Label Content="29 сентября 2021" FontSize="14" 
               HorizontalAlignment="Left" VerticalAlignment="Top" 
               Margin="661,133,0,0"/>
    </Grid>
</UserControl>